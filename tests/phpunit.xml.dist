<phpunit
        bootstrap="bootstrap.php"
        backupGlobals="false"
        colors="true"
>
    <testsuites>
        <testsuite name="unit">
            <directory suffix=".php">./unit/</directory>
            <directory suffix=".php">./integration/</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory suffix=".php">../src</directory>
        </include>
    </source>
    <coverage>
    </coverage>
</phpunit>